{% extends 'base.html.twig' %}



{% block body %}

<h2 class='mt-3'>Gestion des marques ({{ brands|length}})</h2>

    <a class="btn btn-success" href="{{ path('app_admin') }}">Back Office</a>
    <a class="btn btn-dark" href="{{ path('app_brand_new') }}">Ajouter une marque</a>

    <table class="table table-striped table-hover table-bordered text-center mt-3">

        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for brand in brands %}
            <tr>
                <td>{{ brand.id }}</td>
                <td>{{ brand.title }}</td>
                <td class="w-25">

                    <a 
                        href="{{ path('app_brand_show', {'id': brand.id}) }}"
                        class="text-decoration-none"
                    >
                      <img src="{{ asset('images/fiche.png') }}" alt="voir" class="sizeSvg30">
                    </a>


                    <a 
                        href="{{ path('app_brand_edit', {'id': brand.id}) }}"
                        class="text-decoration-none"
                    >
                        <img src="{{ asset('images/edit.png')}}" alt="modifier" class="sizeSvg30">
                    </a>

                    {{ include('brand/_delete_form.html.twig') }}
                        

                </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune marque trouv√©e</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
