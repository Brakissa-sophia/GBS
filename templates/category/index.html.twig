{% extends 'base.html.twig' %}



{% block body %}

<h1 class='mt-3'>Gestion des catégories ({{ categories|length}})</h1>

    <a class="btn btn-dark" href="{{ path('app_category_new') }}">Ajouter une catégorie</a>

    <table class="table table-striped table-hover table-bordered text-center mt-3">

        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Quantité</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td class="w-25">{{ category.id }}</td>
                <td class="w-25">{{ category.name }}</td>
                <td></td>
                     <td class="w-25">

                    <a 
                        href="{{ path('app_category_show', {'id': category.id}) }}"
                        class="text-decoration-none"
                    >
                      <img src="{{ asset('images/fiche.png') }}" alt="voir" class="sizeSvg30">
                    </a>


                    <a 
                        href="{{ path('app_category_edit', {'id': category.id}) }}"
                        class="text-decoration-none"
                    >
                        <img src="{{ asset('images/edit.png')}}" alt="modifier" class="sizeSvg30">
                    </a>

                    {{ include('category/_delete_form.html.twig') }}
                        

                </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune catégorie trouvée</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}