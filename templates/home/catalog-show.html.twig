{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | {{ product.title }} {% endblock %}
{% block description %}{{ parent() }} | {{ product.title }} {% endblock %}
{% block keywords %}{{ parent() }} | {{ product.title }} {% endblock %}

{% block body %}
<h2>{{ product.title }}</h2>

<div class="container-fluid my-4" style="background-color: #f6ecdd;">
 <div class="row g-3 align-items-stretch">
     
<!-- COLONNE 1 : 3 images miniatures -->
<div class="d-none d-md-flex col-md-2 col-lg-1 order-1 order-md-1 order-lg-1">
  <div class="rounded w-100">
      <div class="d-flex flex-row flex-md-column flex-lg-column gap-2">
          {% for i in 1..4 %}
              {% if productWithImages.images[i] %}
                  <img src="{{ asset(productWithImages.images[i]) }}" 
                       class="border rounded w-100"
                       style="height: 140px; object-fit: cover; cursor: pointer;"
                       onclick="changeMainImage('{{ asset(productWithImages.images[i]) }}', this)"
                       alt="Image {{ i }}">
              {% else %}
                  <div class="bg-light border rounded d-flex align-items-center justify-content-center w-100" 
                       style="height: 120px;">
                      <span class="text-muted small">{{ i }}</span>
                  </div>
              {% endif %}
          {% endfor %}
      </div>
  </div>
</div>
     
     <!-- COLONNE 2 : Image principale -->
     <div class="col-12 col-md-10 col-lg-5 d-flex order-2 order-md-2 order-lg-2">
         <div class="bg-white rounded w-100 overflow-hidden">
             {% if productWithImages.mainImage %}
                 <img id="mainImage"
                      src="{{ asset(productWithImages.mainImage) }}" 
                      class="w-100 h-100"
                      style="object-fit: cover;"
                      alt="{{ product.title }}">
             {% else %}
                 <div class="bg-light d-flex align-items-center justify-content-center h-100">
                     <span class="text-muted">Image principale</span>
                 </div>
             {% endif %}
         </div>
     </div>
     
     <!-- COLONNE 3 : Informations produit -->
     <div class="col-12 col-md-12 col-lg-6 d-flex order-3 order-md-3 order-lg-3 rounded">
         <div class="bg-white p-4 rounded w-100">
             <h4 class="text-start text-dark">{{ product.title }}</h4>
             <h3 class="text-success text-end text-lg-start">{{ product.price }}€</h3>
             <p class="text-muted text-start">{{ product.description }}</p>
             
           <!-- Quantité + Panier + Favori sur même ligne -->
            <div class="row align-items-center mb-3 g-0">
                 <!-- Quantité - 3 colonnes -->
                 <div class="col-3">
                     <div class="d-flex align-items-center justify-content-center">
                         <button class="btn btn-sm btn-outline-secondary border rounded-1 d-flex align-items-center justify-content-center" style="width: 30px; height: 30px;" onclick="changeQty(-1)">−</button>
                         <span class="mx-2 fw-medium" id="qty-display">1</span>
                         <button class="btn btn-sm btn-outline-secondary border rounded-1 d-flex align-items-center justify-content-center" style="width: 30px; height: 30px;" onclick="changeQty(1)">+</button>
                     </div>
                 </div>
                 
                 <!-- Ajouter au panier - 6 colonnes -->
                 <div class="col-6">
                     <a href="{{ path('app_cart_add', {'type': 'product', 'id': product.id}) }}" class="w-100" id="add-to-cart-link">
                         <button class="p-2 btn btn-success w-100" id="add-to-cart-btn">Ajouter au panier</button>
                     </a>
                 </div>
                 
                 <!-- Favori - 3 colonnes -->
                 <div class="col-3 d-flex justify-content-center">
                     <button class="btn btn-outline-danger" onclick="toggleHeart(this)">
                         <i class="far fa-heart"></i>
                     </button>
                 </div>
             </div>

           <!-- Onglets Bootstrap pour Ingrédients et Mode d'emploi -->
           <div class="pt-4">
               <ul class="nav nav-tabs" id="productTab" role="tablist">
                   <li class="nav-item" role="presentation">
                       <button class="nav-link active" id="ingredients-tab" data-bs-toggle="tab" data-bs-target="#ingredients-tab-pane" type="button" role="tab" aria-controls="ingredients-tab-pane" aria-selected="true">Ingrédients</button>
                   </li>
                   <li class="nav-item" role="presentation">
                       <button class="nav-link" id="usage-tab" data-bs-toggle="tab" data-bs-target="#usage-tab-pane" type="button" role="tab" aria-controls="usage-tab-pane" aria-selected="false">Mode d'emploi</button>
                   </li>
               </ul>
               <div class="tab-content" id="productTabContent">
                   <div class="tab-pane fade show active small pt-3" id="ingredients-tab-pane" role="tabpanel" aria-labelledby="ingredients-tab" tabindex="0">
                       {% if productWithImages.ingredients is defined and productWithImages.ingredients %}
                           {{ productWithImages.ingredients|nl2br }}
                       {% else %}
                           <span class="fst-italic text-muted">Informations non renseignées</span>
                       {% endif %}
                   </div>
                   <div class="tab-pane fade small pt-3" id="usage-tab-pane" role="tabpanel" aria-labelledby="usage-tab" tabindex="0">
                        {% if productWithImages.usageAdvice is defined and productWithImages.usageAdvice %}
                           {{ productWithImages.usageAdvice|nl2br }}
                       {% else %}
                           <span class="fst-italic text-muted">Informations non renseignées</span>
                       {% endif %}
                   </div>
               </div>
           </div>
         </div>
     </div>   
 </div>

<div class="my-4">
    <h4 class="text-center pt-5 mb-4">Produits similaires</h4>
    
    <div class="d-flex justify-content-center gap-3" style="align-items: stretch;">
        {% for item in similarProducts %}
            <div class="card" style="width: 18rem;">
                {% if item.image %}
                    <a class="text-decoration-none text-dark" href="{{ path('app_catalog_product_show', {'id': item.product.id}) }}">
                        <img src="{{ asset(item.image) }}" 
                             class="card-img-top" 
                             alt="{{ item.product.title }}"
                             style="height: 300px; object-fit: cover;">
                    </a>
                {% else %}
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                         style="height: 300px;">
                        <span class="text-muted">Pas d'image</span>
                    </div>
                {% endif %}
                
                <div class="card-body d-flex flex-column">
                    <a class="text-decoration-none text-dark" href="{{ path('app_catalog_product_show', {'id': item.product.id}) }}">
                        <h5 class="card-title">{{ item.product.title }}</h5>
                    </a>
                    <div class="mt-auto">
                        <div class="d-flex justify-content-end mb-2">
                            <span class="text-success fw-bold">{{ item.product.price }}€</span>
                        </div>
                        <a href="{{ path('app_cart_add', {'type': 'product', 'id': item.product.id}) }}" class="btn btn-outline-success w-100">Ajouter au panier</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

</div>
</div>

<script>
function changeMainImage(src, element) {
 document.getElementById('mainImage').src = src;
 
 document.querySelectorAll('.d-none img, .d-md-flex img').forEach(img => {
     img.classList.remove('border-success');
     img.classList.add('border-secondary');
 });
 
 element.classList.remove('border-secondary');
 element.classList.add('border-success');
}

function changeQty(change) {
    const display = document.getElementById('qty-display');
    let value = parseInt(display.textContent) + change;
    
    if (value >= 1) {
        display.textContent = value;
        
        // Mettre à jour le lien "Ajouter au panier" avec la nouvelle quantité
        const addToCartLink = document.getElementById('add-to-cart-link');
        
        if (addToCartLink) {
            // Récupérer l'URL actuelle
            let currentHref = addToCartLink.getAttribute('href');
            
            // Ajouter ou mettre à jour le paramètre quantity
            const url = new URL(currentHref, window.location.origin);
            url.searchParams.set('quantity', value);
            addToCartLink.setAttribute('href', url.toString());
        }
    }
}

function toggleHeart(button) {
  const icon = button.querySelector('i');
  if (icon.classList.contains('far')) {
    icon.classList.remove('far');
    icon.classList.add('fas');
    button.classList.remove('btn-outline-danger');
    button.classList.add('btn-danger');
  } else {
    icon.classList.remove('fas');
    icon.classList.add('far');
    button.classList.remove('btn-danger');
    button.classList.add('btn-outline-danger');
  }
}
</script>
{% endblock %}