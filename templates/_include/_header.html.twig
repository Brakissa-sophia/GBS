<header class="container-fluid fixed-top px-0">    
    <div class="scrolling-text">             
        <span>Offre spéciale : -20% sur tout le site avec le code GLOW20</span>         
    </div>

    <div class="container h-100">
        <div class="row align-items-center">
           
            <div class="col-4">
               
                <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasMenu" aria-controls="offcanvasMenu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <!-- Icône recherche pour desktop -->
                <button class="btn p-0 border-0 d-none d-lg-block">
                    <img class="img-fluid" src="{{ asset('images/recherche.png') }}" alt="Rechercher">
                </button>
            </div>
            
            <!-- Centre : Logo -->
            <div class="col-4 text-center">
                <a href="{{ path('app_home') }}" class="text-decoration-none">
                    <img class="img-fluid rounded-circle" src="{{ asset('images/log.png') }}" alt="Logo">
                </a>
            </div>
            
           
            <div class="col-4 text-end">
                <!-- Dropdown utilisateur -->
                <div class="dropdown d-inline-block me-2">
                    <button class="btn p-0 border-0" data-bs-toggle="dropdown" aria-expanded="false">
                        <img class="img-fluid" src="{{ asset('images/utilisateur.png') }}" alt="Compte utilisateur">
                    </button>
                    {% if app.user %}
                        <!-- Menu pour utilisateur connecté -->
                        <ul class="dropdown-menu py-lg-0">
                            <li><h6 class="dropdown-header">Bonjour {{ (app.user.firstName ?? app.user.email)|capitalize }}</h6></li>
                            <li><hr class="dropdown-divider m-lg-0"></li>
                            <li><a class="dropdown-item fw-bold py-lg-2 fw-bold" href="{{ path('app_profile_index') }}">Mon compte</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_order') }}">Mes commandes</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_addresse') }}">Mes adresses</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_setting') }}">Paramètres</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_admin') }}">Back office</a></li>
                            <li><hr class="dropdown-divider m-lg-0"></li>
                            <li><a class="dropdown-item text-danger py-lg-2" href="{{ path('app_logout') }}">Se déconnecter</a></li>
                        </ul>
                    {% else %}
                        <!-- Menu pour utilisateur non connecté -->
                        <ul class="dropdown-menu py-lg-0">
                            <li><h6 class="dropdown-header fw-bold py-lg-2 fw-bold">Mon compte</h6></li>
                            <li><hr class="dropdown-divider m-lg-0"></li>
                            <li><a class="dropdown-item" href="{{ path('app_login') }}">Se connecter</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_register') }}">Inscription</a></li>
                            <li><hr class="dropdown-divider m-lg-0"></li>
                            <li><a class="dropdown-item py-lg-2" href="#">Suivre ma commande</a></li>
                        </ul>
                    {% endif %}
                </div>
                
                <a class="text-decoration-none me-2" href="{{ path('app_favorite') }}">
                    <img class="img-fluid" src="{{ asset('images/favoris.png') }}" alt="Favoris">
                </a>
                <a class="text-decoration-none" href="{{ path('app_cart') }}">
                    <img class="img-fluid" src="{{ asset('images/panier.png') }}" alt="Panier">
                </a>
            </div>
        </div>
        
        <!-- Titre - caché en mobile -->
        <div class="d-none d-lg-block">
            <h1 class="fw-bold text-center">Glow Beauty Skin</h1>
        </div>
        
       
        <nav class="navbar navbar-expand-lg w-100 p-0">
           
            <div class="collapse navbar-collapse d-none d-lg-block" id="menu-global">
                
                <ul class="navbar-nav w-100 justify-content-between px-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_home') }}">Accueil</a>
                    </li>
                    
                    <!-- Dropdown Marques -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMarques" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Marque
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMarques">
                           {% for brand in get_brands() %}
    <li><a class="dropdown-item" href="{{ path('app_catalog_brand', {'id': brand.id }) }}">{{ brand.title }}</a></li>
{% endfor %}
                        </ul>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_catalog') }}">Produit</a>
                    </li>
                   
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_device') }}">Outils de beauté</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_contact') }}">Contact</a>
                    </li>
                </ul>
            </div>
        </nav>
        
        
<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasMenu">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title">Menu</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        
        <div class="mb-4">
            <h6 class="text-muted mb-2 fw-bold">Rechercher</h6>
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Rechercher...">
                <button class="btn btn-success" type="submit">Rechercher</button>
            </div>
        </div>
        
        
        <ul class="navbar-nav">
            <li class="nav-item mb-2">
                <a class="nav-link py-2" href="{{ path('app_home') }}">Accueil</a>
            </li>
            
           
            <li class="nav-item dropdown mb-2">
                <a class="nav-link dropdown-toggle py-2" href="#" id="offcanvasDropdownMarques" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Marque
                </a>
                <ul class="dropdown-menu w-100" aria-labelledby="offcanvasDropdownMarques">
                    <li><a class="dropdown-item" href="#">Anua</a></li>
                    <li><a class="dropdown-item" href="#">Beauty Of Joseon</a></li>
                    <li><a class="dropdown-item" href="#">Medicube</a></li>
                    <li><a class="dropdown-item" href="#">Skin1004</a></li>
                </ul>
            </li>
            
            <li class="nav-item mb-2">
                <a class="nav-link py-2" href="{{ path('app_catalog') }}">Produit</a>
            </li>
           
            <li class="nav-item mb-2">
                <a class="nav-link py-2" href="{{ path('app_device') }}">Outils de beauté</a>
            </li>
            
            <li class="nav-item mb-2">
                <a class="nav-link py-2" href="{{ path('app_contact') }}">Contact</a>
            </li>
        </ul>
    </div>
  </div>
 </div>
</header>