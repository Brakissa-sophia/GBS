{% extends 'base.html.twig' %}



{% block body %}
    <h2 class='mt-3'>Gestion type de peau ({{ skin_types|length}})</h2>
    
    <a class="btn btn-success" href="{{ path('app_admin') }}">Back Office</a>
    <a class="btn btn-dark" href="{{ path('app_skin_type_new') }}">Ajouter un type de peau</a>

    <table class="table table-striped table-hover table-bordered text-center mt-3">

         <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for skin_type in skin_types %}
            <tr>
                <td>{{ skin_type.id }}</td>
                <td>{{ skin_type.title }}</td>
               <td class="w-25">

                    <a 
                        href="{{ path('app_skin_type_show', {'id': skin_type.id}) }}"
                        class="text-decoration-none"
                    >
                      <img src="{{ asset('images/fiche.png') }}" alt="voir" class="sizeSvg30">
                    </a>


                    <a 
                        href="{{ path('app_skin_type_edit', {'id': skin_type.id}) }}"
                        class="text-decoration-none"
                    >
                        <img src="{{ asset('images/edit.png')}}" alt="modifier" class="sizeSvg30">
                    </a>

                    {{ include('skin_type/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun type de peau</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
